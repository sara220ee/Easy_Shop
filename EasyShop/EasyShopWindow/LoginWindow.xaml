<Window x:Class="EasyShopWindow.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyShopWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="C:\\Users\\sarar\\Downloads\\C#\\c#\\EasyShop\\images\\colorful-shopping-bags.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Connexion" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" FontFamily="Segoe UI Light"/>
                <Label Content="Email"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,5,0,10"/>
                <Label Content="Mot de passe"/>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5,0,20"/>
                <Button Content="Se connecter" Click="Login_Click" Width="100" Margin="0,0,0,10" Background="#FF1E3C72" Foreground="White">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </Button.Effect>
                </Button>
                <Button Content="S'inscrire" Click="Register_Click" Width="100" Background="#FF6A11CB" Foreground="White">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
