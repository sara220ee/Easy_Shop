<Window x:Class="EasyShopWindow.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administration" Height="450" Width="800" WindowStartupLocation="CenterScreen">
	<Window.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#F0F0F0" Offset="0"/>
			<GradientStop Color="#E5E5E5" Offset="0.3"/>
			<GradientStop Color="#DADADA" Offset="0.7"/>
			<GradientStop Color="#CFCFCF" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<Grid>
		<Button Content="Deconnexion" Click="Logout_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10" Width="120" Height="35"
				Background="#FF6A11CB" Foreground="White"
                FontWeight="SemiBold" BorderThickness="0"
                Cursor="Hand">
			<Button.Effect>
				<DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
			</Button.Effect>
		</Button>

		<Border Background="White" CornerRadius="8" Padding="20"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderBrush="#CCCCCC" BorderThickness="1">
			<StackPanel Width="280">
				<TextBlock Text="Panneau d'administration" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

				<Button Content="Gerer les admins" Click="ManageAdmins_Click" Margin="0,5" Height="40" Background="Transparent" Foreground="#FF6A11CB" HorizontalAlignment="Stretch">
					<Button.Effect>
						<DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3"/>
					</Button.Effect>
				</Button>

				<Button Content="Gerer les categories" Click="ManageCategories_Click" Margin="0,5" Height="40" Background="Transparent" Foreground="#FF6A11CB" HorizontalAlignment="Stretch">
					<Button.Effect>
						<DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3"/>
					</Button.Effect>
				</Button>

				<Button Content="Gerer les articles" Click="ManageArticles_Click" Margin="0,5" Height="40" Background="Transparent" Foreground="#FF6A11CB" HorizontalAlignment="Stretch">
					<Button.Effect>
						<DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3"/>
					</Button.Effect>
				</Button>
			</StackPanel>
		</Border>
	</Grid>
</Window>
