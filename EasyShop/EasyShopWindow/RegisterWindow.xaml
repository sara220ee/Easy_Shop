<Window x:Class="EasyShopWindow.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyShopWindow"
        mc:Ignorable="d"
        Title="Inscription" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F0F0" Offset="0"/>
            <GradientStop Color="#E5E5E5" Offset="0.3"/>
            <GradientStop Color="#DADADA" Offset="0.7"/>
            <GradientStop Color="#CFCFCF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre -->
                <Label Content="Inscription" FontSize="16" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

                <Label Content="Nom :" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="10"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Width="200" Margin="10"/>

                <Label Content="Adresse :" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="10"/>
                <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Width="200" Margin="10"/>

                <Label Content="Email :" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="10"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Width="200" Margin="10"/>

                <Label Content="Mot de passe :" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Margin="10"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="4" Grid.Column="1" Width="200" Margin="10"/>

                <Label Content="Date de naissance :" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="10"/>
                <DatePicker SelectedDate="{Binding BirthDate, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Width="200" Margin="10"/>

                <Button Content="S'inscrire" Click="Register_Click" Grid.Row="6" Grid.ColumnSpan="2" Width="100" Background="#FF6A11CB" Foreground="White" HorizontalAlignment="Center" Margin="10">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5"/>
                    </Button.Effect>
                </Button>

                <Button Content="Retour a la connexion" Click="ReturnToLogin_Click" Grid.Row="7" Grid.ColumnSpan="2" Width="150" Background="Transparent" Foreground="#FF6A11CB" HorizontalAlignment="Center" Margin="10">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="0.3"/>
                    </Button.Effect>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Window>
